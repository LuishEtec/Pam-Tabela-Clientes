<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ClienteCrudApp.ViewModels"
             x:Class="ClienteCrudApp.Views.CadastroPage">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Entry Placeholder="Nome" Text="{Binding Nome}" />
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Senha" Text="{Binding Senha}" IsPassword="True" />
        <Button Text="Cadastrar" Command="{Binding CadastrarCommand}" />
    </VerticalStackLayout>
</ContentPage>
